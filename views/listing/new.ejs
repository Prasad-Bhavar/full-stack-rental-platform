<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>create your wanderLust</h3>
                <form action="/listing" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="enter Title" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Title is Good!
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">description</label>
                        <textarea type="text" name="listing[description]" placeholder="enter Title" class="form-control"
                            required></textarea>
                        <div class="valid-feedback">enter the valid desciption!</div>
                    </div>

                    <div class="mb-2">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" placeholder="enter image url/link" class="form-control"
                            required>

                    </div>

                    <div class="row">
                        <div class="mb-2 col-md-4">
                            <label for="price" class="form-label">price</label>
                            <input type="number" name="listing[price]" placeholder="enter price" value="0"
                                class="form-control" required>
                            <div class="invalid-feedback">please enter the valid price!</div>
                        </div>
                        <div class="mb-2 col-md-8">
                            <label for="location" class="form-label">location</label>
                            <input type="text" name="listing[location]" placeholder="enter location"
                                class="form-control" required>
                            <div class="valid-feedback">enter the valid location!</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="country" class="form-label">country</label>
                        <input type="text" name="listing[country]" placeholder="enter country" class="form-control"
                            required>
                        <div class="valid-feedback">enter the valid country Name!</div>
                    </div>

                    <button class="btn-add">ADD</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>