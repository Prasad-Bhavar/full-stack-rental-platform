        <style>
            .listing-top {

                padding-top: 0.8rem;
                display: flex;
                justify-content: flex-end;
                align-items: center;
            }

            .search-bar {
                margin: 0 1rem;
            }

            .tax-info {
                display: none;
            }

            .toggle {
                border: 1px solid black;
                border-radius: 1rem;
                height: 3.25rem;
                padding: 0.8rem;
                display: flex;
                justify-content: flex-end;
                align-items: center;

            }

            .search-btn {
                display: flex;
                align-items: center;
                border-radius: 1rem;
            }

            .search-btn i {
                text-align: center;
                margin: 0 0.3rem;
            }

            .search-input {
                border-radius: 1rem;
                padding: 0.5rem 0.5rem;
            }
        </style>


        <div class="listing-top">

            <div class="toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display after Taxes</label>
                </div>
            </div>

            <div class="search-bar">
                <form action="/listing" method="get" class="d-flex" role="search">
                    <input class="form-control me-2 search-input" type="search" placeholder="Search destination"
                        aria-label="Search" name="search">
                    <button type="submit" class="btn btn-danger search-btn" type="submit"><i
                            class="fa-solid fa-magnifying-glass "></i>search</button>
                </form>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 py-3">

            <% for(let list of allLists){ %>
                <a href="/listing/<%= list._id %>" class="listing-links">
                    <div class="card col card-set listing-card">
                        <img src="<%= list.image.url %>" class=" " alt="listing-image">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title%>
                                </b><br>
                                &#8377; <%=list.price.toLocaleString("en-IN") %> / night
                                    <i class="tax-info"> &nbsp;+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>

    <script>
        let taxSwitch = document.getElementById('switchCheckDefault');

        taxSwitch.addEventListener('click', () => {
            let taxInfo = document.getElementsByClassName("tax-info");

            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = 'inline';
                }
                else {
                    info.style.display = "none";
                }
            }
        })
    </script>